---
import '../styles/global.css';

const { specialClassNames, titleIcon, title } = Astro.props

const classNames = `
  p-10 flex
  bentoCard dark:bg-cardBackground rounded-[50px] dark:border dark:border-slate-500
  dark:shadow-[0px_0px_4px_2px_rgba(0,255,255,0.3)] transition-rounded transition-shadow ease-in-out 
  duration-300 dark:hover:shadow-[0px_0px_6px_3px_rgba(0,255,255,0.7)] 
  ${specialClassNames}`;
---

<div class={classNames}>
  <h3 class="text-2xl md:text-3xl lg:text-2xl xl:text-3xl text-gray-700 dark:text-gray-300 font-bold flex gap-2"><span class="mr-4">{titleIcon}</span>{title}</h3>
  <slot />
</div>