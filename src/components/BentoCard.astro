---
import '../styles/global.css'

const { noPadding, order, cols, rows, flex, justifyAlignment, gap, isGroup, pointer, titleIcon, title } = Astro.props
const padding = noPadding ? "" : "p-7 lg:p-10"
const flexType = flex ? flex : "flex-col"
const group = isGroup ? "group" : ""
const cursorPointer = pointer && "cursor-pointer"
---

<div class=
  `bentoCard ${order} ${cols} ${rows} ${padding} flex ${flexType} ${justifyAlignment} ${gap} ${group} ${cursorPointer} rounded-[50px] overflow-hidden 
  dark:bg-cardBackground dark:border dark:border-slate-500 dark:shadow-[0px_0px_4px_2px_rgba(0,255,255,0.3)] dark:hover:shadow-[0px_0px_6px_3px_rgba(0,255,255,0.7)]
  transition-rounded transition-shadow ease-in-out duration-300`
>
  { titleIcon && title ? 
    <h3 class="text-lg md:text-xl xl:text-3xl text-gray-700 dark:text-gray-300 font-bold flex gap-2"><span class="mr-4">{titleIcon}</span>{title}</h3>
  : ""}
  <slot />
</div>