---
import '../styles/global.css';

const { cols, rows, specialClassNames } = Astro.props

const classNames = `bg-cardBackground col-span-${cols} row-span-${rows} rounded-lg border border-slate-500 shadow-[0px_0px_4px_2px_rgba(0,255,255,0.3)] transition-shadow ease-in-out duration-500 hover:shadow-[0px_0px_6px_3px_rgba(0,255,255,0.7)] ` + specialClassNames;
---

<div class={classNames}>
  <slot />
</div>