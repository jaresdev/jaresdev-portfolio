---
const { name, technologies, url, gitHubUrl } = Astro.props
---

<div
  class="projectCard relative lg:w-1/4 cursor-pointer transition-all 
  ease-in-out duration-500 group rounded-xl transformhover:scale-110"
>
  <div 
    class="absolute w-full h-full rounded-xl bg-gradient-to-t from-slate-300/10 
    to-transparent to-70% lg:bg-[length:200%_200%] transition-all duration-300
    group-hover:bg-[position:100%_50%]"
  ></div>
  <div 
    class="absolute w-full h-full px-8 py-6 flex flex-col-reverse flex-wrap items-start"
  >
    <div 
      class="order-2 flex flex-wrap items-start mt-4 group-hover:mt-10 gap-1 lg:opacity-0 lg:invisible 
      group-hover:opacity-100 group-hover:visible lg:max-h-0 group-hover:max-h-40 
      transition-all ease-in-out duration-500"
    >
      {technologies.map((technology:string) => {
        return (
          <span 
            class="text-xs text-gray-700/50 dark:text-slate-300/50 font-extralight 
            border border-gray-700/50 dark:border-slate-300/50 rounded-full px-2"
          >{technology}</span>
        )
      })}
    </div>
    <a 
      href={gitHubUrl}
      target="_blank"
      class="order-1 self-end lg:opacity-0 lg:invisible fill-none hover:fill-[#B0B0B0] 
      active:fill-[#B0B0B0] lg:group-hover:opacity-100 lg:group-hover:visible 
        lg:max-h-0 lg:group-hover:max-h-40 transition-all ease-in-out duration-500 z-10"
    >
      <svg  
        class="size-10"  
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"  
        stroke="#B0B0B0"
      >
        <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
      </svg>
    </a>
    <h3 
      class="order-3 text-sm xl:text-xl group-hover:text-gray-700/70 
    text-gray-700/60 dark:text-slate-300/50 font-semibold">
        {name}
    </h3>
  </div>
  <a 
    href={url}
    target="_blank" 
    class="absolute top-0 left-0 w-full h-full rounded-xl"
  ></a>
</div>