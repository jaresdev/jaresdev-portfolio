---
const { icon, title, href, subtitle } = Astro.props
---

<h3 class="text-2xl md:text-3xl lg:text-2xl xl:text-3xl text-gray-700 dark:text-gray-300 font-bold flex gap-2"><span class="mr-4">{icon}</span>{title}</h3>
<a 
  href={href}
  target="_blank"
  class="w-full h-full flex items-center cursor-pointer flex-wrap"
>
  <slot />
  <h4 class="text-md xl:text-2xl text-[#6b7280] dark:text-gray-500 font-medium duration-300 ease-in-out group-hover:mt-6">{subtitle}</h4>
</a> 