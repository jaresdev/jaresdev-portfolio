---
const { href, subtitle, cv } = Astro.props
---

<a 
  href={href} 
  class=`w-full h-full flex gap-4 icon 
    ${ cv ? "download 2xl:flex-col 2xl:items-center" : "email contact" }`
>
  <div 
    class=`relative w-1/3 md:w-1/5
     ${ cv ? "2xl:w-full" : "" } sm:h-16 flex md:m-auto justify-center 
     items-center mr-4 2xl:mr-8`
  >
    <slot />
  </div>
  <div 
    class=`relative w-2/3 md:w-4/5 
      ${ cv ? "2xl:w-full 2xl:text-center" : "" } flex justify-center items-center`
  >
    <h4 
      class=`text-lg md:text-2xl dark:text-gray-500 font-medium duration-300 
        ease-in-out flex-auto xl:ml-4 2xl:ml-0 text-balance`
    >
      {subtitle}
    </h4>
  </div>
</a>