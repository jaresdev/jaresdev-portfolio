---
const { href, subtitle, cv } = Astro.props
---

<a
  href={href}
  target="_black"
  class=`w-full h-full flex items-center 
    ${ cv ? "download 2xl:flex-col 2xl:items-center 2xl:justify-center" : "email contact" }`
>
  <slot />
  <div class=`ml-8 ${ cv ? "2xl:ml-0 2xl:mt-4" : ""}`>
    <h4 
      class=`text-lg md:text-2xl xl:text-lg 2xl:text-2xl dark:text-gray-500 
        font-medium duration-300 ease-in-out flex-auto xl:ml-4 2xl:ml-0 text-balance`
    >
      {subtitle}
    </h4>
  </div>
</a>