---
import LanguageModal from '@/components/LanguageModal';

interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Jaresdev website" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=One+Stroke&display=swap">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<LanguageModal client:load lang="es" />
	</body>
</html>
