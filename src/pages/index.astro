---
import '../styles/global.css';

import Layout from '../layouts/Layout.astro';
import BentoCard from '../components/BentoCard.astro';
import WorkStatus from '../components/WorkStatus.astro';
import ThemeToggle from '../components/ThemeToggle';
import SocialLink from '../components/SocialLink.astro';
import CV from '../components/CV.astro';
---

<Layout title="Jaresdev website">
	<main class="w-[calc(100svw-50px)] lg:w-[calc(100svw-100px)] max-w-[1920px] font-onest mx-auto flex items-center justify-center">
		<section class="
			md:min-h-[calc(100svh-100px)] 
			w-[calc(100svw-50px)] md:w-[calc(100svw-100px)]
			grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 2xl:grid-cols-12 gap-4 
			rounded-[50px] transition-all duration-300 my-10 p-5 
			dark:bg-bentoBackground dark:border dark:border-cyan-900/10 dark:shadow-[0px_0px_15px_3px_rgba(0,255,255,0.3)]
		">
			<BentoCard id="profilePicture" specialClassNames={"2xl:col-span-3 2xl:row-span-5 overflow-hidden relative"}>
				<img src="/profile.jpg" alt="Imagen de perfil" class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 ease-in-out transform hover:scale-110">
			</BentoCard>
			<BentoCard id="greetings" specialClassNames={"2xl:col-span-7 2xl:row-span-1 p-10 flex flex-col justify-center group gap-10"}>
				<h3 class="text-2xl md:text-3xl xl:text-4xl 2xl:text-6xl text-gray-700 dark:text-gray-300 font-bold flex gap-2"><span class="inline-block transition-transform -rotate-12 group-hover:animate-[sayHello_.7s_ease-in-out]">ðŸ‘‹</span> Hi, I'm Jose</h3>
				<h4 class="text-lg md:text-2xl 2xl:text-5xl text-gray-900/80 dark:text-gray-500 font-medium">Full stack developer based in MÃ¡laga, Spain</h4>
			</BentoCard>
			<BentoCard id="statuses" specialClassNames={"2xl:col-span-2 2xl:row-span-1 flex flex-col items-center justify-evenly"}>
				<ThemeToggle client:load />
				<WorkStatus />
			</BentoCard>
			<BentoCard id="" specialClassNames={"2xl:col-span-6 2xl:row-span-4 bg-slate-600 rounded-[50px]"}></BentoCard>
			<BentoCard id="social" specialClassNames={"2xl:col-span-3 2xl:row-span-1 flex items-center"}>
				<SocialLink socialNetwork="linkedIn" />
				<SocialLink socialNetwork="gitHub" />
				<SocialLink socialNetwork="email" />
			</BentoCard>

			<BentoCard id="" specialClassNames={"2xl:col-span-3 2xl:row-span-6 bg-slate-600 rounded-[50px]"}></BentoCard>
			<BentoCard id="" specialClassNames={"2xl:col-span-9 2xl:row-span-3 bg-slate-600 rounded-[50px]"}></BentoCard>

			<BentoCard id="" specialClassNames={"2xl:col-span-5 2xl:row-span-3 bg-slate-600 rounded-[50px]"}></BentoCard>
			<BentoCard id="" specialClassNames={"2xl:col-span-5 2xl:row-span-3 bg-slate-600 rounded-[50px]"}></BentoCard>
			<BentoCard id="resume" specialClassNames={"2xl:col-span-2 2xl:row-span-3 group flex flex-col items-center"}>
				<CV />
			</BentoCard>
		</section>
	</main>
</Layout>